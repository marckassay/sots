{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution":"node",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist/",
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}