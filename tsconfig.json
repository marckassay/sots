{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "dom",
      "es2018"
    ],
    "experimentalDecorators": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "declaration": true,
    "listFiles": true,
    "noEmitOnError": true,
    "inlineSources": true,
    "newLine": "LF",
    "listEmittedFiles": false,
    "traceResolution": false,
    "stripInternal": true,
    "outDir": "./dist"
  },
  "include": [
    "lib/"
  ]
}
