{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es5",
      "lib": [
          "dom",
          "es2015"
      ],
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "stripInternal": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": false,
      "sourceMap": true,
      "declaration": true,
      "listFiles": false,
      "newLine": "LF",
      "noEmitOnError": true,
      "inlineSources": true,
      "listEmittedFiles": false,
      "traceResolution": false,
      "outDir": "./dist"
    },
      "include": [
        "lib/**/*.ts",
        "test/**/*.ts"
    ]
}