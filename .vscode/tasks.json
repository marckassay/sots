{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lib Unit-Test",
            "type": "npm",
            "script": "test",
            "promptOnClose": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "Lib Build",
            "type": "npm",
            "script": "build",
            "identifier": "lib_build",
            "problemMatcher": [
                "$tsc",
                "$eslint-stylish"
            ]
        },
        {
            "label": "Lib Watch",
            "type": "typescript",
            "identifier": "lib_watch",
            "tsconfig": "sots\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        }
    ]
}